<div class="sidebar">
  <div class="sidebar-header">
    <h3><i class="fas fa-th-large me-2"></i> Dashboard</h3>
  </div>
  <div class="sidebar-menu">
    <ul>
      <li>
        <a href="/user-dashboard" class="<%= !query.categories ? 'active' : '' %>">
          <i class="fas fa-home"></i> All Categories
        </a>
      </li>
      <% categories.forEach(cat => { %>
        <li>
          <a href="/user-dashboard?categories=<%= cat.category_name %>" 
             class="<%= query.categories === cat.category_name ? 'active' : '' %>">
            <i class="fas fa-tag"></i> <%= cat.category_name %>
          </a>
        </li>
      <% }) %>
    </ul>
  </div>
</div>
