<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/user-dashboard.css">
</head>
<body>
    <!-- Sidebar -->
    <%- include('./layouts/user-sidebar.ejs')%>

    <!-- Topbar -->
    <%- include('./layouts/user-topbar.ejs')%>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container-fluid">
            <h2 class="mb-4">Products</h2>
            
            <div class="product-grid">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                    <div class="product-card">
                        <div class="product-img">
                        <% if (product.image) { %>
                            <img src="<%= product.image %>" alt="<%= product.product_name %>">
                        <% } else { %>
                             <img src="https://picsum.photos/250/180?random=<%= product._id %>" alt="<%= product.product_name %>">
                        <% } %>
                        </div>
                        <div class="product-info">
                        <div class="product-title"><%= product.product_name %></div>
                        <div class="product-price">â‚¹<%= product.price %></div>
                        <div class="product-category">
                            <%= product.category_info ? product.category_info.category_name : 'Uncategorized' %>
                        </div>
                        <a href="/products/<%= product._id %>" class="btn-details">View Details</a>
                        </div>
                    </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-center mt-4">No products found.</p>
                <% } %>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="/js/user-dashboard.js"></script> -->
</body>
</html>